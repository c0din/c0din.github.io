---
interface Props {
	title: string;
	description: string;
	href: string;
}

const { href, title, description } = Astro.props;
---

<a href={href} class="block group">
	<div class="relative p-6 rounded-2xl bg-white/10 backdrop-blur-md border border-white/20 transition-all duration-300 group-hover:border-cyan-400 group-hover:bg-white/20 group-hover:-translate-y-1 shadow-[0_8px_32px_0_rgba(31,38,135,0.37)]">
		<h3 class="text-2xl font-bold text-white mb-2 group-hover:text-cyan-400 transition-colors">
			{title}
		</h3>
		<p class="text-slate-200 leading-relaxed">
			{description}
		</p>
		<div class="mt-4 text-sm font-bold uppercase tracking-widest text-pink-500 group-hover:text-pink-400">
			Explore Project â†’
		</div>
	</div>
</a>