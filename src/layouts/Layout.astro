---
// Import the global CSS so Tailwind 4 can process it
import '../styles/global.css';

interface Props {
	title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body class="min-h-screen overflow-hidden selection:bg-pink-500/30">
		<!-- Fixed Aether Background - deeper saturation for readability -->
		<div class="aether-bg fixed inset-0 -z-50 pointer-events-none"></div>

		<!-- Parallax Clouds Layer - shifts subtly on scroll -->
		<div id="clouds-layer" class="fixed inset-0 -z-40 pointer-events-none opacity-30 mix-blend-overlay transition-transform duration-700 ease-out">
			<div class="cloud cloud-1"></div>
			<div class="cloud cloud-2"></div>
			<div class="cloud cloud-3"></div>
			<div class="cloud cloud-4"></div>
		</div>

		<main class="relative z-10">
			<slot />
		</main>
	</body>
</html>
