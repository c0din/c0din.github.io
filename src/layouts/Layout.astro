---
// Import the global CSS so Tailwind 4 can process it
import '../styles/global.css';

interface Props {
	title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body class="bg-gradient-to-b from-[#7fdbff] to-[#ff85ff] min-h-screen">
		<slot />
	</body>
</html>
