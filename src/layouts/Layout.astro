---
// Import the global CSS so Tailwind 4 can process it
import '../styles/global.css';

interface Props {
	title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body class="min-h-screen overflow-hidden">
		<!-- Fixed Aether Background - deeper saturation for readability -->
		<div class="aether-bg fixed inset-0 -z-50 pointer-events-none transition-all duration-700"></div>

		<main class="relative z-10">
			<slot />
		</main>
	</body>
</html>
